<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#052093"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risk Assessment"
            android:textColor="@color/quantum_white_100"
            android:textSize="32sp"

            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/topRiskRL"
        android:layout_width="match_parent"
        android:layout_below="@+id/top_ll"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:textColor="@color/app_color"
            android:text="Risk Alert"/>
        <ImageView
            android:id="@+id/riskIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_red_alert"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/assessTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topRiskRL"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:textSize="17sp"
        android:textColor="@color/app_color"
        android:text="You have a high risk of pain alert"/>


    <TextView
        android:id="@+id/desTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assessTV"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:textSize="13sp"
        android:textColor="@color/app_color"
        android:text="You have a high risk of pain alert"/>

    <ProgressBar
        android:id="@+id/progressPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>